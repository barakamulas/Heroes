{{#partial "content"}}
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-title text-center">
                        <h2>{{squad.name}}</h2>
                    </div>
                    <div class="card-body">
                        <h3>Max Size</h3><br>
                        <p>{{squad.size}}</p>
                        <h3>Cause</h3><br>
                        <p>{{squad.cause}}</p><br>
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <h3>Heroes in this Squad</h3>
                <hr><br>
                <div class="row">
                    {{#if heroes}}
                        {{#each heroes}}
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <h2>{{hero.name}}</h2>
                                </div>
                                <div class="card-body">
                                    <p class="card-text">Age: {{hero.age}}</p>
                                    <p class="card-text">Special Power: {{hero.power}}</p>
                                    <p class="card-text">Weakness: {{hero.weakness}}</p>
                                </div>
                                <div class="card-footer">
                                    <ul class="nav nav-pills card-header-pills">
                                        <li class="nav-item">
                                            <a class="nav-link" href="/heroes/{{hero.id}}/delete" class="btn btn-danger">Delete</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/heroes/{{hero.id}}/edit" class="btn btn-secondary">Edit</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    {{else}}
                        <div class="jumbotron">
                            <h1>No Heroes in this squad!!</h1>
                        </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>

{{/partial}}
{{> layout.hbs}}