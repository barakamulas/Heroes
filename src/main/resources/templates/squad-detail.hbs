{{#partial "content"}}
    <div class="container">
        <h1>{{squad.name}}</h1>
        <p>Max Size: {{squad.size}}</p>
        <p>Cause: {{squad.cause}}</p>
        <div class="row">
            <h3>Heroes</h3>
            {{#if heroes}}
            {{#each heroes}}
                <div class="col-md-4">
                    <div class="card text-center">
                        <div class="card-header">
                            <h2>{{hero.name}}</h2>
                        </div>
                        <div class="card-body">
                            <p class="card-text">Age: {{hero.age}}</p>
                            <p class="card-text">Special Power: {{hero.power}}</p>
                            <p class="card-text">Weakness: {{hero.weakness}}</p>
                            <p class="card-text">squad: {{hero.squad.name}}</p>
                        </div>
                        <div class="card-footer">
                            <ul class="nav nav-pills card-header-pills">
                                <li class="nav-item">
                                    <a class="nav-link" href="/heroes/{{hero.id}}/delete" class="btn btn-danger">Delete</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/heroes/{{hero.id}}/edit" class="btn btn-secondary">Edit</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            {{/each}}
            {{else}}
                <div class="jumbotron">
                    <h1>No Heroes in this squad!!</h1>
                </div>
            {{/if}}
        </div>
    </div>

{{/partial}}
{{> layout.hbs}}