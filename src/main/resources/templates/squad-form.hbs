{{#partial "content"}}
    {{#if editSquad}}
        <h3>Edit this category!</h3>
        <form action="/squads/{{squad.id}}" method="post">
            <div class="form-group">
                <label for="newSquadName">Edit this squad's name</label>
                <input id="newSquadName" name="newSquadName" type="text" class="form-control" value="{{squad.name}}">
            </div>
            <div class="form-group">
                <label for="newMaxSize">Edit this squad's name</label>
                <input id="newMaxSize" name="newMaxSize" type="number" class="form-control"  value="{{squad.maxSize}}">
            </div>
            <div class="form-group">
                <label for="newCause">Edit this squad's name</label>
                <input id="newCause" name="newCause" type="text" class="form-control"  value="{{squad.cause}}">
            </div>

            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{else}}
        <h3>Add a new squad!</h3>
        <form action="/squads/new" method="post">
            <div class="form-group">
                <label for="name">Squad Name</label>
                <input id="name" name="name" class="form-control" type="text" >
            </div>

            <div class="form-group">
                <label for="maxSize">Max Size</label>
                <input id="maxSize" name="maxSize" type="number" class="form-control"  >
            </div>

            <div class="form-group">
                <label for="cause">Cause</label>
                <input id="cause" name="cause" type="text" class="form-control" >
            </div>


            <button type="submit" class="btn btn-default">Go!</button>
        </form>

    {{/if}}
{{/partial}}

{{> layout.hbs}}